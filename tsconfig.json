{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~constants/*": ["./src/constants/*"],
      "~components/*": ["./src/components/*"],
      "~stores/*": ["./src/stores/*"],
      "~styles/*": ["./src/styles/*"],
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
